---
import siteConfig from '../data/site-config';

interface Props {
    lang?: string;
}

const { lang = 'en' } = Astro.props;
const socialLinks = siteConfig.socialLinks ?? [];
const baseNavLinks = siteConfig.footerNavLinks ?? [];
// Prepend lang to footer nav links
const navLinks = baseNavLinks.map((link) => ({
    ...link,
    href: `/${lang}${link.href}`
}));
const currentYear = new Date().getFullYear();
---

<footer class="mx-auto w-full max-w-3xl pt-12 pb-10 sm:pt-24 sm:pb-14">
    {
        navLinks.length > 0 && (
            <nav class="mb-4 flex flex-wrap gap-x-6 gap-y-1" aria-label="Footer navigation">
                {navLinks.map((link) => {
                    const baseHref = link.href.replace(/^\/(?:en|es|fr)/, '');
                    return (
                    <a 
                        class="font-serif hover:underline hover:underline-offset-2" 
                        href={link.href}
                        data-footer-link={baseHref}
                    >
                        {link.text}
                    </a>
                );})}
            </nav>
        )
    }
    <div
        class:list={[
            'border-main flex flex-col gap-4 border-t border-dashed pt-6',
            { 'sm:flex-row-reverse sm:items-center sm:justify-between': socialLinks.length > 0 }
        ]}
    >
        {
            socialLinks.length > 0 && (
                <div class="flex flex-wrap gap-x-4 gap-y-1">
                    {socialLinks.map((link) => (
                        <a
                            class="inline-flex items-center justify-center text-sm hover:underline hover:underline-offset-2"
                            href={link.href}
                            target="_blank"
                            rel="noopener noreferer"
                        >
                            {link.text}
                        </a>
                    ))}
                </div>
            )
        }
        <p class="text-sm">
            &copy; {currentYear}
            <a class="hover:underline hover:underline-offset-2" href="/">{siteConfig.title}</a>. All rights reserved.
        </p>
    </div>
</footer>

<script is:inline>
    function updateFooterLinks() {
        const currentLang = window.currentLang || 'en';
        document.querySelectorAll('a[data-footer-link]').forEach(link => {
            const baseHref = link.getAttribute('data-footer-link');
            if (baseHref) {
                link.href = '/' + currentLang + baseHref;
            }
        });
    }
    
    // Run on load
    updateFooterLinks();
    
    // Also run after view transitions
    document.addEventListener('astro:after-swap', updateFooterLinks);
</script>